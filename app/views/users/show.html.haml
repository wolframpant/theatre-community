.container
  .pull-left
    = image_tag(@user.avatar.profile.url) if @user.avatar?
  
  %h1 User profile for #{@user.name || @user.email}
  
  %h2 Impressions
  - @impressions.each do |imp|
    %h5= link_to imp.title, imp
    = markdown imp.body 
    %br
  %br  
  %h2 Comments
  - @comments.each do |com|
    = com.body
    %small
      = link_to 'See Comment in context', com.impression
    %br
    %br