.container

  %h1 Add Production for #{@play.title}

  = form_for @production do |f|
    = f.label :company
    %br
    = f.text_field :company, placeholder: 'Company'
    %br
    = f.label :date_opened
    %br
    = f.date_select :date_opened, :order => [:month, :day, :year], placeholder: 'Date Opened'
    %br
    = f.label :address
    %br
    = f.text_field :address, placeholder: 'Address'
    %br
    = f.label :city
    %br
    = f.text_field :city, placeholder: 'City'
    %br
    = f.label :state
    %br
    = f.text_field :state, placeholder:'ST', size: 2
    %br
    = f.label :country
    %br
    = f.text_field :country, placeholder: "Country"
    %br
    = f.hidden_field :play_id, :value => @play.id
    %br
    = f.submit 'Submit'
