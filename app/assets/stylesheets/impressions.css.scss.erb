.impimage {
  padding: 10px;
  float: left;
  text-align: center;
  border-style: double;
  border-width: 2px;
  border-color: #700548;
  margin: 0px 5px 20px 5px;
}

.comments {
  clear: both;
}

.playtitle {
  text-decoration: underline;
}

.italic {
  font-style: italic;
}

.impressionstyle {
  font-family: Bookman Old Style, Times New Roman, serif;
  color: #700548;
  padding: 10px;
  border-style: double;
  border-width: 0 3px 0 3px;
  border-color: #700548;
}

.impressionstyle small {
  font-family: Bookman Old Style, Times New Roman, serif;
  color: #700548;
}