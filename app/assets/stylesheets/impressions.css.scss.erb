.impimage {
  padding: 10px;
  float: left;
  text-align: center;
background-image: url('<%= asset_path("pink_glass.jpg") %>');
  border-style: outset;
  border-width: 2px;
  border-color: #8383a9;
  margin: 0px 5px 20px 5px;
}

.comments {
  clear: both;
}

.playtitle {
  text-decoration: underline;
}

.italic {
  font-style: italic;
}

.impressionstyle {
  font-family: Bookman Old Style, Times New Roman, serif;
background-image: url('<%= asset_path("seamlesstexture24_1200.jpg") %>');
  color: #700548;
  padding: 10px;
  border-style: outset;
  border-width: 10px;
  border-color: #8383a9;
}

.impressionstyle small {
  font-family: Bookman Old Style, Times New Roman, serif;
  color: #700548;
}